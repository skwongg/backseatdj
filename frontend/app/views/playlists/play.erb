<div class="wrapper clearfix">
  <img class='current_picture' src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSwew4Qc_B7b2ZyzQc_BVYDh9ToYYfH311PrQ0i7ugwosqIHK6f" style="width:35%;">
</div>
<div class="main-container debug">
  <div class="main wrapper clearfix debug">
    <div class="player">
      <h4 class="trackTitle">
        <a style="color:white; background:#3B3BBF">Current track</a>
      </h4>
      <img src="/player_rew.png" style="height:30px;" id="repeat">
      <img src="/player_eject.png" style="height:30px;" id="prevsong">
      <img src="/player_play.png" style="height:30px" id="play">
      <img src="/player_pause.png" style="height:30px; display:none;" id="pause">
      <img src="/player_stop.png" style="height:30px;" id="stop">
      <img src="/player_end.png" style="height:30px;" id="next">
      <input type="range" id="volume" min="0" max="100" value="50" onchange="showValue(this.value)" style="width:50px"/>
      <div style="display:none;"> Volume:<span id="range">50</span></div>
    </div>

    <div class="playlistp">
      <div class="playlist" style="display:none">
        <% @rep.each_with_index do |rep ,i| %>
        <div class=<%=i%>>
          <div class='playlistid'>id=<%=rep["playlist_id"]%></div>
          <div class="songurl"><%=rep["song_url"]%></div>
          <div class="trackid"><%=rep["track_id"]%></div>
          <div class="songlist"><%=rep["title"]%></div>
        </div>
        <% end %>
      </div>

      <div class="info">
        <% @rep.each_with_index do |rep ,i| %>
        <div class="font2 fontx1.5 opac">
          <a style="color:white; background:#3B3BBF" class="nothere animate" href="/songs/<%= rep["id"] %>"><%= rep["title"] %>
          </a>
        </div>
        <%end%>
      </div>
    </div>
  </div>
</div>

<script src="/js/playlistshow.js"></script>
